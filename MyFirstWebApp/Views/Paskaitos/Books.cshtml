@model BookModel

@{
    ViewData["Title"] = "Books";
}

<h1>@Model.SearchTerm</h1>

<p>Found @Model.Books.Count() books</p>


<div class="container">
  <div class="row">
    @{
        foreach(var book in Model.Books)
        {
            <div class="card">
                <img src="@book.CoverUrl" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title">@book.title</h5>
                  <p class="card-text">@book.author.name (@book.author.birth_date)</p>
                </div>
            </div>
        }
    }
    </div>
</div>